<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0c4de"
        android:id="@+id/schedule">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schelist"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:text="日付"
                android:textSize="22sp"
                android:gravity="center"
                android:id="@+id/schedule_datetext" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:textSize="22sp"
                android:gravity="center"
                android:text="実績本数"
                android:id="@+id/schedule_performancetext" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="22sp"
                android:text="目標本数"
                android:id="@+id/schedule_objectivetext" />

        </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:id="@+id/schedule_scroll"
        android:layout_weight="0.8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_data">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView" />
        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="0.25"
            android:layout_gravity="center_horizontal"
            android:id="@+id/lay8">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="ホーム"
                android:id="@+id/HomeButton"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="ランキング"
                android:id="@+id/RankingButton"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="スケジュール"
                android:id="@+id/ScheduleButton"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="商品表示"
                android:id="@+id/SyohinButton"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
