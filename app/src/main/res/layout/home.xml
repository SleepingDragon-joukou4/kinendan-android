<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#000"
    tools:context=".FullscreenActivity"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/home">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="チーム名"
            android:textSize="15sp"

            android:textColor="#000"
            android:id="@+id/home_team"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"

            android:text="12345678901234567890"
            android:textColor="#000"
            android:id="@+id/home_teamname"
            android:layout_weight="5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/lay2"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="残りあと"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="top"
            android:id="@+id/home_nokori"
            android:layout_gravity="bottom" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:textSize="50sp"
            android:text="77"
            android:textColor="#000"
            android:id="@+id/home_nissu"
            android:gravity="bottom|right" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="22sp"
            android:text="日！"
            android:textColor="#000"
            android:id="@+id/home_niti"
            android:layout_gravity="top"
            android:gravity="center|bottom|right"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:longClickable="false"
        android:id="@+id/userinfo"
        android:layout_marginBottom="66dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:longClickable="false"
            android:id="@+id/today_ok"
            android:background="#e6000000"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日の目標"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/home_mokuhyo"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/home_mhonsu"
                android:layout_gravity="center_horizontal|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:weightSum="1"
            android:id="@+id/today_real"
            android:background="#e6000000"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吸った本数"
                android:textSize="22sp"
                android:textColor="#fff"
                android:id="@+id/team_sutta"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_shonsu"
                android:textColor="#000"
                android:textSize="40dp"
                android:paddingLeft="12dp"
                android:layout_gravity="center_horizontal" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本数入力"
                android:id="@+id/honsu_button"
                android:background="#fff"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#000"
                android:layout_margin="3dp" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/team_inf"
        android:layout_marginTop="66dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_today_ok"
            android:layout_weight="1"
            android:background="#e6000000"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="チームの目標"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/home_teammokuhyo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/teamgenzai" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_today_real"
            android:layout_weight="1"
            android:background="#e6000000"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="チーム合計"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/home_teamgenzai" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="77"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#fff"
                android:id="@+id/teammokuhyo" />

        </LinearLayout>
    </LinearLayout>









    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/menu">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/HomeButton"
            android:background="@drawable/ic_action_home"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/RankingButton"
            android:background="@drawable/ic_action_achievement"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/ScheduleButton"
            android:background="@drawable/ic_action_calendar_month"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/SyohinButton"
            android:background="@drawable/ic_action_mustache"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</FrameLayout>
