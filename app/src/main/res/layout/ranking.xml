<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    tools:context="com.sleepingdragon.joko4nen.nosmoke.ranking.RankingActivity.ranking"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0c4de"
        android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"

        android:layout_weight="0.80"
        android:id="@+id/ranking_body">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="現在のチームランキング"
            android:textSize="22sp"
            android:id="@+id/textView2" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/lay1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="順位"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ranktext"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="アカウント名"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_nametext"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="達成率"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ritutext"
                android:layout_marginLeft="30dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_ranking" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ranking_bodyline">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay8"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ホーム"
            android:id="@+id/HomeButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ランキング"
            android:id="@+id/RankingButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="スケジュール"
            android:id="@+id/ScheduleButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="商品表示"
            android:id="@+id/SyohinButton"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</FrameLayout>
