<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#96000000"
    tools:context=".FullscreenActivity"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f000"
        android:scaleType="centerCrop"
        android:id="@+id/regsuccess_body"
        android:gravity="center|top"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#ff00ffff"
            android:id="@+id/sin_text1"
            android:layout_weight="0.03"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:text="ああ　あああ" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#ffff0000"
            android:id="@+id/sin_text"
            android:layout_weight="0.03"
            android:layout_marginTop="30dp"
            android:text="さんが･･･" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標本数を超過しました\n以下の内容を実行しましょう"
            android:textSize="22sp"
            android:textColor="#ffff0000"
            android:id="@+id/sin_text2"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#ffff0000"
            android:id="@+id/judgement"
            android:text="焼肉をおごる"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/fire">
        <ImageView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#96000000"
            android:scaleType="centerCrop"
            android:id="@+id/regsuccess"
            android:gravity="center|top"
            android:weightSum="1">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/invite_button"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="right">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="OK"
            android:id="@+id/regsuccess_next"
            android:background="#ffcd0000" />

    </LinearLayout>
    </FrameLayout>
