<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sleepingdragon.joko4nen.nosmoke.finish.finishactivity"
    android:background="@drawable/home_gaitou">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#64000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="結果発表！"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/finish_resulttext"
            android:layout_weight="0.16"
            android:background="#64000000"
            android:textColor="#ffe1e1e1"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="ユーザ名:"
                android:id="@+id/finish_usernametext"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_username"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="守った回数:"
                android:id="@+id/finish_protecttext"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_protect"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="破った回数:"
                android:id="@+id/finish_breaktext"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_braek"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="個人節煙合計:"
                android:id="@+id/finish_solo_moderationtext"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_solo_moderation"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="節煙額:"
                android:id="@+id/finish_savingtext"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_saving"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.09"
            android:background="#64000000"
            android:layout_margin="5dp">
            <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="達成率:"
            android:id="@+id/finish_percenttext" 
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Loading..."
                android:id="@+id/finish_percent"
                android:textSize="18sp" android:gravity="right|center"
                android:textColor="#ffe1e1e1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.30"
            android:background="#64000000"
            android:id="@+id/finish_layout"
            android:layout_margin="5dp"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:textSize="21sp"
                android:text="禁煙成功！\nおめでとうございます！"
                android:id="@+id/finish_text"
                android:textColor="#ffe1e1e1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.4"
                android:layout_gravity="bottom|right"
                android:textSize="26sp"
                android:text="最初から"
                android:id="@+id/finish_firstbutton"
                android:background="#64ff6400"
                android:textColor="#ffe1e1e1"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
