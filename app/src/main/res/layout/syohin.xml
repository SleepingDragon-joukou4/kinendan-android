<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    tools:context=".FullscreenActivity"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0c4de"
        android:id="@+id/syohin">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/lay1">

            <TextView
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:textSize="22sp"
                android:textColor="#000"
                android:id="@+id/syouhinkaeru"
                android:layout_marginLeft="15dp"
                android:text="タバコを我慢したことで以下のモノが買えます･･･"
                android:gravity="left"
                android:layout_marginTop="5dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/lay2">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="節約された金額"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/setuyaku"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="77777"
                android:textSize="35sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/kingaku"
                android:layout_marginLeft="15dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="円"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/en"
                android:layout_marginLeft="5dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/lay3">

            <TextView
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="買えるモノ"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/kaeru"
                android:layout_marginLeft="15dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/lay4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="77777円のうまい棒"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/mono"
                android:layout_marginLeft="15dp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/lay8"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ホーム"
            android:id="@+id/HomeButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ランキング"
            android:id="@+id/RankingButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="スケジュール"
            android:id="@+id/ScheduleButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="商品表示"
            android:id="@+id/SyohinButton"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>




    </FrameLayout>
