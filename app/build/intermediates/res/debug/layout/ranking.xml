<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    tools:context="com.sleepingdragon.joko4nen.nosmoke.ranking.RankingActivity.ranking"
    android:id="@+id/body">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0c4de"
        android:id="@+id/ranking_body">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/lay1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="順位"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_rank"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="アカウント名"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_name"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="達成率"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ritu"
                android:layout_marginLeft="30dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/lay2">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_rank1"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="qwe"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_name1"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="95%"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ritu1"
                android:layout_marginLeft="30dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/lay3">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_rank2"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="rty"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_name2"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="85%"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ritu2"
                android:layout_marginLeft="30dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/lay4">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_rank3"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="asd"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_name3"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="70%"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/rank_ritu3"
                android:layout_marginLeft="30dp" />


        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/lay8"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ホーム"
            android:id="@+id/HomeButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ランキング"
            android:id="@+id/RankingButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="スケジュール"
            android:id="@+id/ScheduleButton"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="商品表示"
            android:id="@+id/SyohinButton"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>




    </FrameLayout>
